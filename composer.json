{
    "name": "conversio/phpmailer-adapter",
    "require": {
        "php": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "5.5.*",
        "conversio/mail": "dev-master",
        "phpmailer/phpmailer": "~5.2"
    },
    "autoload": {
        "psr-4": {
            "Conversio\\PhpMailerAdapter\\": "src",
            "Conversio\\PhpMailerAdapter\\Tests\\": "tests"
        }
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/alexmpunkt/mail.git"
        }
    ],
    "scripts": {
        "test": [
            "phpunit"
        ],
        "coverage": [
            "phpunit --coverage-clover=coverage.xml"
        ]
    }
}
